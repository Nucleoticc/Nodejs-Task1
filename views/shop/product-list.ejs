<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="container">
                <% if(products.length> 0) { %>
                    <div class="row justify-content-around">
                        <% for(let product of products) { %>
                            <div class="col-4 mb-4 card-deck">
                                <article class="card text-center" style="width: 18rem;">
                                    <img class="card-img-top" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%= product.title %>
                                        </h4>
                                        <h6 class="card-text">$<%= product.price %>
                                        </h6>
                                        <p class="card-text">
                                            <%= product.description %>
                                        </p>
                                        <a class="btn btn-primary" href="/product/<%= product.id %>">Details</a>
                                    </div>
                                </article>
                            </div>
                            <% } %>
                    </div>
                    <% } else { %>
                        <p>No products found</p>
                        <% } %>
            </main>